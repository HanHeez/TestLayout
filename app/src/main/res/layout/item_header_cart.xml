<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_48"

    android:background="@color/white">

    <View
        android:id="@+id/topDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_8"
        android:background="@color/bg_shop_main_color" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_below="@id/topDivider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnCbShop"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/length_31"
            android:layout_height="match_parent">
            <CheckBox
                android:padding="@dimen/length_5"
                android:layout_marginLeft="@dimen/length_12"
                android:id="@+id/cbShop"
                android:layout_width="@dimen/length_19"
                android:layout_height="@dimen/length_19"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/length_12"
                android:button="@null"
                android:background="@drawable/bg_round_checkbox_cart"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txtShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cbShop"
            android:text="Shop Name"
            android:textColor="@color/text_main"
            android:textSize="@dimen/txt_shop_name_detail" />

        <ImageView
            android:layout_width="@dimen/length_16"
            android:layout_height="@dimen/length_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_5"
            android:layout_toRightOf="@id/txtShopName"
            android:rotation="180"
            android:src="@drawable/nav_btn_back_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_1px" />
</RelativeLayout>