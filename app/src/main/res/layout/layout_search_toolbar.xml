<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tabbar_height"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/length_40"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_press_item"
            android:clickable="true"
            android:padding="@dimen/length_10"
            android:src="@drawable/nav_btn_back_black" />


        <RelativeLayout

            android:id="@+id/rlSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/length_5"
            android:layout_marginTop="@dimen/length_7"
            android:layout_marginBottom="@dimen/length_7"
            android:layout_weight="1"
            android:background="@drawable/bg_round_home_search">

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="@dimen/length_16"
                android:layout_height="@dimen/length_16"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_marginRight="@dimen/length_5"
                android:src="@drawable/app_images_rn_search_icon_new" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/length_25"
                android:layout_toRightOf="@id/icon_search"
                android:background="@null"
                android:hint="Tìm kiếm"
                android:maxLines="1"
                android:textColor="@color/grey600"
                android:textSize="@dimen/length_13" />

            <ImageView
                android:id="@+id/btnRemoveSearch"
                android:layout_width="@dimen/length_15"
                android:layout_height="@dimen/length_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/length_8"
                android:src="@drawable/apk_sent_delet_up" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/length_80"
            android:layout_height="match_parent"
            android:padding="@dimen/length_5">

            <TextView
                android:id="@+id/btnSubmitSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_round_home_baby_week"
                android:gravity="center"
                android:paddingLeft="@dimen/length_2"
                android:paddingTop="@dimen/length_5"
                android:paddingRight="@dimen/length_2"

                android:paddingBottom="@dimen/length_5"
                android:text="Tìm kiếm"
                android:textColor="@color/white"
                android:textSize="@dimen/length_12" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/bg_home_search_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>